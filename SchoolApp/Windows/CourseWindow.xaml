<Window x:Class="SchoolApp.Windows.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolApp.Windows"
        mc:Ignorable="d"
        Title="CourseWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddCourseButton" Content="Add Course" HorizontalAlignment="Left" Margin="26,25,0,0" VerticalAlignment="Top" Height="41" Width="215"/>
        <Button x:Name="DeleteCourse" Content="Delete Course" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Height="41" Width="224"/>
        <Button x:Name="EditCourseButton" Content="Edit Course" HorizontalAlignment="Left" Margin="556,25,0,0" VerticalAlignment="Top" Height="41" Width="210"/>
        <DataGrid Margin="10,116,10,10"/>
        <Label x:Name="AllCoursesLabel" Content="All Courses" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="108" FontSize="16" FontFamily="Arial" Foreground="#FF9800FF"/>

    </Grid>
</Window>
