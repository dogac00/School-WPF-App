<Window x:Class="SchoolApp.Windows.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolApp.Windows"
        mc:Ignorable="d"
        Title="All Students" Height="352" Width="733" Loaded="Window_Loaded">
    <StackPanel>
        <Button x:Name="AddStudent" Content="Add New" Margin="10,10,10,0" Height="29" Width="Auto" Background="#FF9364A4" Foreground="White" Click="AddStudent_Click"/>
        <DataGrid x:Name="StudentsGrid" Margin="10,10,10,0" Height="325" ColumnWidth="*" AutoGeneratingColumn="StudentsGrid_OnAutoGeneratingColumn"/>
    </StackPanel>
</Window>
