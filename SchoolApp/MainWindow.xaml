<Window x:Class="SchoolApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="470">
    <Grid>
        <Label x:Name="Header" Content="Welcome to School App" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" Foreground="#FF5E00FF"/>
        <Button x:Name="OpenStudentWindowButton" Content="Students Page" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Height="40" Width="206" Background="#FFA464E0" Click="OpenStudentWindowButton_Click"/>
        <Button x:Name="OpenCourseWindowButton" Content="Courses Page" HorizontalAlignment="Center" Margin="0,177,0,0" VerticalAlignment="Top" Height="40" Width="206" Background="#FFA464E0" Click="OpenCourseWindowButton_Click"/>
    </Grid>
</Window>
